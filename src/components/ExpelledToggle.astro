<button
  id="expulsados-toggle"
  class="px-4 py-2 bg-indigo-700 text-white rounded-md hover:bg-indigo-800 transition mb-4"
>
  Ocultar expulsados
</button>

<script>
  (function () {
    const btn = document.getElementById('expulsados-toggle');
    if (!btn) return;

    let mostrarExpulsados = true;

    const updateLabel = () => {
      btn.textContent = mostrarExpulsados ? 'Ocultar expulsados' : 'Mostrar expulsados';
    };
    updateLabel();

    const toggleExpulsados = () => {
      mostrarExpulsados = !mostrarExpulsados;
      updateLabel();

      const cards = document.querySelectorAll('[data-estado]');
      cards.forEach(el => {
        const estado = el.dataset.estado;
        el.style.display = mostrarExpulsados || estado !== 'expulsado' ? '' : 'none';
      });
    };

    btn.addEventListener('click', toggleExpulsados);
  })();
</script>
