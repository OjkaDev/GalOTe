---
import { concursantesData } from '../data/concursantes';
import ConcursanteCard from '../components/ConcursanteCard.astro';
import ModalWrapper from '../components/ModalWrapper.jsx';
import ResetButton from '../components/ResetButton.jsx';
import '../styles/global.css'; 
import { fade } from 'astro:transitions';
import ScoreDisplay from '../components/ScoreDisplay.jsx';
---

<!DOCTYPE html>
<html lang="es">
<head>
	
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OT Votaciones</title>

</head>
<body class="min-h-screen bg-gray-900 p-8">
    <main class="max-w-6xl mx-auto">
        <h1 class="text-5xl font-extrabold text-indigo-700 mb-10 text-center">
            Votaciones de OT
        </h1>
        <div class="mb-8 flex justify-center">
			<ResetButton client:load />
		</div>
			<ScoreDisplay client:load />
        <div transition:animate={fade({ duration: '1s' })} class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{concursantesData.map((concursantes) => (
				<ModalWrapper
					client:load
					concursante={concursantes}
					>
					
				
				<ConcursanteCard
					id={concursantes.id}
					nombre={concursantes.nombre}
					estado={concursantes.estado}
					imagen={concursantes.imagen}
					/>
				</ModalWrapper>
			))} 
        </div>
    </main>
</body>
</html>
